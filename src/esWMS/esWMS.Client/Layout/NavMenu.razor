@using esWMS.Client.Pages
@inject OnePageState onePageState

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Counter</MudNavLink>
    <MudNavLink Href="products" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Artykuły</MudNavLink>
    <MudNavLink Href="categories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Kategorie</MudNavLink>
    <MudNavLink Href="weather" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Weather</MudNavLink>
    <MudNavLink Href="one" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">OnePage</MudNavLink>

    <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">
        <MudButton Icon="@Icons.Material.Filled.Add"
                   OnClick="@(() => onePageState.AddTab(new TabView("Artykuły", new ProductTable(), Guid.NewGuid())))">
            Artykuły
        </MudButton>
    </MudNavLink>
    <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Tag">
        <MudButton Icon="@Icons.Material.Filled.Add"
                   OnClick="@(() => onePageState.AddTab(new TabView("Kategorie", new CategoryTable(), Guid.NewGuid())))">
            Kategorie
        </MudButton>
    </MudNavLink>
    <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Warehouse">
        <MudButton Icon="@Icons.Material.Filled.Add"
                   OnClick="@(() => onePageState.AddTab(new TabView("Magazyny", new WarehouseTabel(), Guid.NewGuid())))">
            Magazyny
        </MudButton>
    </MudNavLink>
</MudNavMenu>
