@using esWMS.Client.ViewModels.Documents
<BaseTemplateTab>
    <HeaderContent>

    </HeaderContent>
    <BodyContent>
        <div class="qr-code-container">
            <h5>@_documentNames[Model.DocumentType] nr @Model.Model.DocumentId</h5>
            <p><strong>Data wystawienia:</strong> @Model.Model.DocumentIssueDate.ToString("dd-MM-yyyy")</p>
            <p><strong>Data wykonania:</strong> @Model.Model.ApprovalDate?.ToString("dd-MM-yyyy")</p>

            <table class="table-actors">
                <thead>
                    <tr class="tr-grey">
                        <th>Wystawca</th>
                        <th>Odbiorca</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@Model.IssuerName</th>
                        <th>@Model.ReceiverName</th>
                    </tr>
                    <tr>
                        <th>@Model.IssuerAddress</th>
                        <th>@Model.ReceiverAddress</th>
                    </tr>
                    <tr>
                        <th>@Model.IssuerPostalCodeCity</th>
                        <th>@Model.ReceiverPostalCodeCity</th>
                    </tr>
                    <tr>
                        <th>@Model.IssuerVatId</th>
                        <th>@Model.ReceiverVatId</th>
                    </tr>
                </tbody>
            </table>

            <table class="document-items">
                <thead>
                    <tr>
                        <th>Kod produktu</th>
                        <th>Nazwa produktu</th>
                        <th>Ilość</th>
                        <th>Cena</th>
                        <th>Stawka VAT</th>
                        <th>Jednostka</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Model.DocumentItems)
                    {
                        <tr>
                            <td>@item.ProductCode</td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price?.ToString("F2")</td>
                            <td>@item.VatRate%</td>
                            <td>@item.Unit</td>
                        </tr>
                    }
                </tbody>
            </table>

            <p><strong>Komentarz:</strong> @Model.Model.Comment</p>

            @if (Model.Model.IsApproved)
            {
                <div class="document-approval">
                    <p><strong>Dokument zatwierdzony:</strong> @Model.Model.ApprovalDate?.ToString("dd-MM-yyyy")</p>
                </div>
            }

            <style>
                .table-actors {
                    border-collapse: separate;
                    border-spacing: 20px 0;
                    text-align: left;
                    width: 100%;
                    print-color-adjust: exact;
                    -webkit-print-color-adjust: exact;
                }

                .tr-grey {
                    background-color: rgb(164, 164, 164) !important;
                    color: black !important;
                    print-color-adjust: exact;
                    -webkit-print-color-adjust: exact;
                }

/*                 th, td {
                    border: 1px solid black; 
                    padding: 8px;
                    text-align: left;
                } */
            </style>
        </div>
    </BodyContent>
</BaseTemplateTab>
@code {
    [Parameter]
    public DocumentPrintModel Model { get; set; }

    private Dictionary<DocumentTypesName, string> _documentNames = new()
    {
        { DocumentTypesName.PZ, "Przyjęcie Zewnętrzne" },
        { DocumentTypesName.WZ, "Wydanie Zewnętrzne" },
        { DocumentTypesName.PW, "Przyjęcie Wewnętrzne" },
        { DocumentTypesName.RW, "Rozchód Wewnętrzny" },
        { DocumentTypesName.ZW, "Zwrot Wewnętrzny" },
        { DocumentTypesName.MMP, "MM+" },
        { DocumentTypesName.MMM, "MM-" }
    };

    public enum DocumentTypesName
    {
        PZ,
        WZ,
        PW,
        RW,
        ZW,
        MMP,
        MMM
    }

    public class DocumentPrintModel
    {
        public DocumentPrintModel(
            BaseDocumentVM model,
            DocumentTypesName documentType,
            string issuerName,
            string issuerAddress,
            string issuerPostalCodeCity,
            string issuerVatId,
            string receiverName,
            string receiverAddress,
            string receiverPostalCodeCity,
            string receiverVatId)
        {
            Model = model;
            DocumentType = documentType;
            IssuerName = issuerName;
            IssuerAddress = issuerAddress;
            IssuerPostalCodeCity = issuerPostalCodeCity;
            IssuerVatId = issuerVatId;
            ReceiverName = receiverName;
            ReceiverAddress = receiverAddress;
            ReceiverPostalCodeCity = receiverPostalCodeCity;
            ReceiverVatId = receiverVatId;
        }

        public BaseDocumentVM Model { get; set; }
        public DocumentTypesName DocumentType { get; set; }
        public string IssuerName { get; set; }
        public string IssuerAddress { get; set; }
        public string IssuerPostalCodeCity { get; set; }
        public string IssuerVatId { get; set; }
        public string ReceiverName { get; set; }
        public string ReceiverAddress { get; set; }
        public string ReceiverPostalCodeCity { get; set; }
        public string ReceiverVatId { get; set; }
    }
}
