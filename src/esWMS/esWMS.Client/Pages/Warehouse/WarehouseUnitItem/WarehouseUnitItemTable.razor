    <ColGroup>
        <col style="width: 60px;" />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortLabel="WarehouseUnitItemId" T="WarehouseUnitItemVM">
