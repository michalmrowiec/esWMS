        </MudTh>
        <MudTh>
        <MudTableSortLabel SortLabel="Unit" T="ProductVM">
                Region
            </MudTableSortLabel>
            <MudTextField T="string" ValueChanged="@(s=>OnSearch2("Region", s))"></MudTextField>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="Unit" T="ProductVM">
                Kod Pocztowy
            </MudTableSortLabel>
